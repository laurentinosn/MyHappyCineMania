{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Lista de Publicidade</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Datainicio</th>
                <th>Datafim</th>
                <th>Nome</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('publicidade_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.dataInicio %}{{ entity.dataInicio|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dataFim %}{{ entity.dataFim|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.nome }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('publicidade_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('publicidade_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('publicidade_new') }}">
                Criar um novo
            </a>
        </li>
    </ul>
    {% endblock %}
