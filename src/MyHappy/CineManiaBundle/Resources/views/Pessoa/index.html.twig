{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Listar Pessoas</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Login</th>
                <th>Email</th>
                <th>Senha</th>
                <th>Documento</th>
                <th>Cidade</th>
                <th>Cep</th>
                <th>Bairro</th>
                <th>Nomefantasia</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('pessoa_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nome }}</td>
                <td>{{ entity.login }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.senha }}</td>
                <td>{{ entity.documento }}</td>
                <td>{{ entity.cidade }}</td>
                <td>{{ entity.cep }}</td>
                <td>{{ entity.bairro }}</td>
                <td>{{ entity.nomeFantasia }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('pessoa_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('pessoa_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('pessoa_new') }}">
                Criar um Novo
            </a>
        </li>
    </ul>
    {% endblock %}
