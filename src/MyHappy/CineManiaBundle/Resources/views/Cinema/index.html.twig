{% extends '::base.html.twig' %}

{% block body -%}
<h1>Cinema list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Cnpj</th>
            <th>Login</th>
            <th>Senha</th>
            <th>Endereco</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
        <tr>
            <td><a href="{{ path('cinema_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nome }}</td>
            <td>{{ entity.cnpj }}</td>
            <td>{{ entity.login }}</td>
            <td>{{ entity.senha }}</td>
            <td>{{ entity.endereco }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('cinema_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('cinema_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('cinema_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
    {% endblock %}
