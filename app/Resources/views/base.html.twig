    <head>
        {% block header %}
            {% include 'MyHappyCineManiaBundle:Default:headers.html.twig' %}
        {% endblock %}
        {% block css %}{% endblock %}
        
    </head>
    <body class="home">
        <div class="wrap">
            <!-- Header Start -->
            <header id="header">
            {% block top_bar %}
                {% include 'MyHappyCineManiaBundle:Default:top_bar.html.twig' %}
            {% endblock %}
            {% block menu%}
                {% render(controller("MyHappyCineManiaBundle:Default:menu")) %}
            {% endblock %}
            </header>
            <div id="main">
                {% block body %}
                {% include 'MyHappyCineManiaBundle:Default:full_banner_container.html.twig' %}
                <div class="slogan bottom-pad-small">
                    <div class="container">
                        <div class="row">
                            <div class="slogan-content">
                                <div class="col-lg-9 col-md-9">
                                    <h2 class="slogan-title">O Melhor e mais alegre do Cinema</h2>
                                </div>
                                {#<div class="col-lg-3 col-md-3">
                                    <div class="get-started">
                                        <button class="btn btn-special btn-color pull-right">Get Started Now</button>
                                    </div>
                                </div>#}
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="main-content">
                    <div class="container">
                        {% render(controller('MyHappyCineManiaBundle:Cinema:cinemaDestaque')) %}
                    </div>
                </div>
                {% render(controller('MyHappyCineManiaBundle:Promocao:filmeDestaque')) %}
{#                {% include 'MyHappyCineManiaBundle:Default:filmes_destaques.html.twig' %}#}
                
                {% include 'MyHappyCineManiaBundle:Default:publicidades.html.twig' %}
                
                {% endblock %}
            </div>
            
        {% block rodape %}
            {% include 'MyHappyCineManiaBundle:Default:rodape.html.twig' %}
        {% endblock %}
            
            <a href="#" class="scrollup"><i class="icon-angle-up"></i></a>
        </div>
        <!-- Wrap End -->
