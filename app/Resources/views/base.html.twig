        <script src="{{asset('bundles/myhappycinemania/js/jquery.nivo.slider.pack.js')}}"></script>
        <script src="{{asset('bundles/myhappycinemania/js/jquery.prettyPhoto.js')}}"></script>
        <script src="{{asset('bundles/myhappycinemania/js/superfish.js')}}"></script>
